    "version": "0.2.0",
    "configurations": [
        { // Debugging the deployer
            "type": "node",
            "request": "launch",
            "name": "Deployer Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\contract",
            "program": "deployer\\deploy.js"
        },
        { // Debugging the compiler
            "type": "node",
            "request": "launch",
            "name": "Compiler Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\contract",
            "program": "compiler\\compile.js"
        },
    ]
}